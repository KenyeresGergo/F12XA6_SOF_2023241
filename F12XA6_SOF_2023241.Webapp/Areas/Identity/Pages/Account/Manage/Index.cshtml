@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}
<link rel="stylesheet" href="~/css/manage_account.css" asp-append-version="true" />


<h3 class="title">@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <label asp-for="Username" class="form-label"></label>
                <br><input asp-for="Username" class="form-control input" disabled />
            </div>
            <div class="form-floating">
                <label asp-for="Input.PhoneNumber" class="form-label"></label>
                <br><input asp-for="Input.PhoneNumber" class="form-control input" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary save-button">Save</button>
        </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

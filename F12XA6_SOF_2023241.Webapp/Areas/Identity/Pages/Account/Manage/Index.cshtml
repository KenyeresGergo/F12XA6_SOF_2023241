@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}
<link rel="stylesheet" href="~/css/manage_account.css" asp-append-version="true" />


    <h3 class="manage-column">@ViewData["Title"]</h3>
<div class="row">
    <partial  name="_StatusMessage" for="StatusMessage" />
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="manage-column">
                <input asp-for="Username" class="form-control input" disabled placeholder="Username"/>
            </div>
        <div class="manage-column">
                <input asp-for="Input.PhoneNumber" class="form-control input" placeholder="Phone number"/>
            </div>
        <button id="update-profile-button" type="submit" class="save-button">Save</button>
        </form>
    </div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

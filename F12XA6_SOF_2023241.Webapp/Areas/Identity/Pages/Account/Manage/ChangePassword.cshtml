@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}
<link rel="stylesheet" href="~/css/manage_account.css" asp-append-version="true" />



<h3 class="title" >@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
        <form id="change-password-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="manage-column">
            <label asp-for="Input.OldPassword" class="form-label"></label>
            <input asp-for="Input.OldPassword" class="form-control input" autocomplete="current-password" aria-required="true" />
                <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
            </div>
        <div class="manage-column">
            <label asp-for="Input.NewPassword" class="form-label"></label>
            <input asp-for="Input.NewPassword" class="form-control input" autocomplete="new-password" aria-required="true" />
                <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
            </div>
        <div class="manage-column">
            <label asp-for="Input.ConfirmPassword" class="form-label"></label>
            <input asp-for="Input.ConfirmPassword" class="form-control input" autocomplete="new-password" aria-required="true" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="save-button">Update password</button>
        </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

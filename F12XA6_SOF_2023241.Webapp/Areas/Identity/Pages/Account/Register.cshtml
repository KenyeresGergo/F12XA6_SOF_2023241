@page
@model RegisterModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Register";
}
<partial name="_ValidationScriptsPartial" />
<script src="~/js/IndexSiteScript.js" asp-append-version="true"></script>

<link rel="stylesheet" href="~/css/register.css" asp-append-version="true" />
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">
<script src="~/js/IndexSiteScript.js" asp-append-version="true"></script>

<div class="register-card">
    <h1 class="row">@ViewData["Home"]</h1>

    <div class="row">
        <div class="col-md-4">
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" enctype="multipart/form-data">
                <h2>Create a new account.</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="Input.FirstName" class="form-control input" autocomplete="firstname" aria-required="true" placeholder="First Name" />
                </div>
            
                <div class="form-floating">
                    <input asp-for="Input.LastName" class="form-control input" autocomplete="lastname" aria-required="true" placeholder="Last Name"/>
                </div>

                <div class="form-floating">
                    <input asp-for="Input.Email" class="form-control input" autocomplete="username" aria-required="true" placeholder="Email" />
                </div>

                <div class="form-floating">
                    <input asp-for="Input.Password" class="form-control input" autocomplete="new-password" aria-required="true" placeholder="Password" />
                </div>

                <div class="form-floating">
                    <input asp-for="Input.ConfirmPassword" class="form-control input" autocomplete="new-password" aria-required="true" placeholder="Confirm Password" />
                </div>
                <div class="form-floating">
                    <input type="file" asp-for="Input.File" />
                </div>

                <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary register-button">Register</button>
            </form>
            <div class="col-md-6 col-md-offset-2">
                <section>
                    <h3>Use another service to register.</h3>
                    <hr />
                    @{
                        if ((Model.ExternalLogins?.Count ?? 0) == 0)
                        {
                            <div>
                                <p>
                                    There are no external authentication services configured. See this <a href="https://go.microsoft.com/fwlink/?LinkID=532715">article
                                    about setting up this ASP.NET application to support logging in via external services</a>.
                                </p>
                            </div>
                        }
                        else
                        {
                            <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                                <div>
                                    <p>
                                        @foreach (var provider in Model.ExternalLogins!)
                                        {
                                            <button type="submit" class="btn btn-primary social-@provider.Name.ToLower()" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName.ToLower()</button>
                                        }
                                    </p>
                                </div>
                            </form>
                        }
                    }
                </section>
            </div>
        </div>
    </div>
</div>


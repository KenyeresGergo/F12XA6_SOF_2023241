@using Microsoft.AspNetCore.Identity

@{
    Layout = "_Layout";
    ViewData["Title"] = "Index";
}
@model F12XA6_SOF_2023241.Models.HomePageViewModel
<!--JS-->
<script src="~/js/index.js" asp-append-version="true"></script>

<!--CSS-->
<link rel="stylesheet" href="~/css/index.css" asp-append-version="true"/>

<div>
    <div id="cards">
        @foreach (var studio in Model.Studios)
        {
            <a href="@Url.Action("Games", "Home", new { studioId = studio.Id })">
                <div class="card">
                    <div class="card-content">
                        <div class="card-image">
                            @* <img src="https://upload.wikimedia.org/wikipedia/commons/c/ca/Sony_logo.svg" asp-append-version="true" /> *@
                            <img src="@(studio.LogoSvg.Substring(10)).svg" asp-append-version="true" />
                        </div>
                        <div class="title">
                            <h3>@studio.Name</h3>
                        </div>
                    </div>
                </div>
            </a>
        }
    </div>
</div>

<div class="pagination">
    @if (Model.CurrentPage > 1)
    {
        <a class="inverse pag-item" href="@Url.Action("Index", new { page = Model.CurrentPage - 1 })">Previous</a>
    }

    <p class="pag-item">@Model.CurrentPage of @Model.TotalPages</p>

    @if (Model.CurrentPage < Model.TotalPages)
    {
        <a class="inverse pag-item" href="@Url.Action("Index", new { page = Model.CurrentPage + 1 })">Next</a>
    }
</div>

@using Microsoft.AspNetCore.Identity

@{
    Layout = "_Layout";
    ViewData["Title"] = "Index";
}
@model F12XA6_SOF_2023241.Models.HomePageViewModel

<script src="~/js/IndexSiteScript.js" asp-append-version="true"></script>
<link rel="stylesheet" href="~/css/indexStyle.css" asp-append-version="true" />
<main>
    <div>
        <div id="cards">
            @foreach (var studio in Model.Studios)
            {
                <div class="card">
                    <div class="card-content">
                        <div class="card-image">
                            <img src="@($"{studio.LogoSvg}.svg")" />
                        </div>
                        <div class="card-info-wrapper">
                            <div class="card-info">
                                <i class="fa-duotone fa-apartment"></i>
                                <div class="card-info-title">
                                    <h3>@studio.Name</h3>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <div>
        @if (Model.CurrentPage > 1)
        {
            <a class="inverse" href="@Url.Action("Index", new { page = Model.CurrentPage - 1 })">Previous</a>
        }

        @Model.CurrentPage of @Model.TotalPages

        @if (Model.CurrentPage < Model.TotalPages)
        {
            <a class="inverse" href="@Url.Action("Index", new { page = Model.CurrentPage + 1 })">Next</a>
        }
    </div>
</main>

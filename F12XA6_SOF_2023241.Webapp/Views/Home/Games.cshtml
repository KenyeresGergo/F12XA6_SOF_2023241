@using Microsoft.AspNetCore.Identity
@model IEnumerable<Game>
@{
    Layout = "_Layout";
    ViewData["Title"] = "Games";
}
<!--CSS-->
<link rel="stylesheet" href="~/css/gallery.css" asp-append-version="true" />

<!--JS-->
<script defer src="~/js/gallery.js" asp-append-version="true"></script>

<div class="photo-grid">
    @{int i = 1;}
    @foreach(var game in @Model)
    {
       
            <a href="@Url.Action("GameReview", "Game", new { gameId = game.Id})">
                <div class="card @GetSizeClass(i)">
                    <img class="card-image" src="@Url.Action("GetImage", "Home", new {userid = game.OwnerId})" alt="Game Image">
                </div>
            </a>
        
         
        i++;
    }
</div>
<div class="add-game-button inverse">
    <a href="@Url.Action("CreateGame", "Game")">Add Game</a>
</div>

@functions {
    string GetSizeClass(int index)
    {
        switch (index % 6)
        {
            // case 1:
            //     return "card-wide";
            // case 2:
            //     return "card-tall";
            case 5:
                return "card-tall card-wide";
            default:
                return "";
        }
    }
}